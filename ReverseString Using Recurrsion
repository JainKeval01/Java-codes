package TimePass;

public class ReverseStrWithRecurssion {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String aa="keval";
		reverseString(aa,aa.length()-1);

	}
	public static void reverseString(String a,int indx)
	{
		if(indx==0)
		{
			System.out.print(a.charAt(indx));
			return;
		}
		
		System.out.print(a.charAt(indx));
		reverseString(a,indx-1);  //Recurrsive hit
				
	}

}
